package hust.namtran.FlowControls;

public class PrintPattern {

	public static void main(String[] args) {
		int triSize = 8;
		int rectSize = 7;
		int zSize = 7;
		/*
		 * print a square triangle
		 */
		for (int row = 1; row <= triSize; row++) {
			for (int col = 1; col <= row; col++) {
				System.out.print("#");
				if (col != row)
					System.out.print(" ");
			}
			System.out.println();
		}
		System.out.println();
		/*
		 * print a round
		 */
		for (int row = 1; row <= rectSize; row++) {
			if (row == 1 || row == rectSize) {
				for (int col = 1; col <= rectSize; col++) {
					System.out.print("#");
					if (col != rectSize) {
						System.out.print(" ");
					}
				}
			} else
				for (int col = 1; col <= rectSize; col++) {
					if (col == 1 || col == rectSize) {
						System.out.print("#");
						if (col != rectSize) {
							System.out.print(" ");
						}
					} else {
						System.out.print("  ");
					}
				}
			System.out.println();
		}
		System.out.println();
		/*
		 * print a Z
		 */
		for (int row = 1; row <= zSize; row++) {
			if (row == 1 || row == zSize) {
				for (int col = 1; col <= zSize; col++) {
					System.out.print("#");
					if (col != zSize) {
						System.out.print(" ");
					}
				}
			} else {

			}
		}
	}

}
