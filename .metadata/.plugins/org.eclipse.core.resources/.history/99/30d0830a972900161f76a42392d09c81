package hust.namtran.Algorithms;

public class GreatestCommonDivisor {
	/*
	 * Tìm ước chung lớn nhất
	 */
	public static void main(String[] args) {
		System.out.println(gcd(5, 0));
	}

	private static int gcd(int a, int b) {
		int upper, lower;
		int temp;

		if (a >= b) {
			upper = a;
			lower = b;
		} else {
			upper = b;
			lower = a;
		}

		while (lower != 0) {
			temp = lower;
			lower = upper % lower;
			upper = temp;
		}
		
		return upper;
	}

}
