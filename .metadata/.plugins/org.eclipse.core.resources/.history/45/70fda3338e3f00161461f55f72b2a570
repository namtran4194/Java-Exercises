package adapters;

import java.io.BufferedReader;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.List;
import java.util.StringTokenizer;

public class HighScore {
	private List<Player> listTopPlayer = new ArrayList<>();

	public HighScore(List<Player> listTopPlayer) {
		this.listTopPlayer = listTopPlayer;
	}

	public void getData() {
		Player player;
		String name;
		int score;
		String line = null;
		StringTokenizer extractHighScore = new StringTokenizer(line, "|");
		InputStream in = ClassLoader.getSystemResourceAsStream("top player");
		try (BufferedReader reader = new BufferedReader(new InputStreamReader(in, "UTF-8"))) {
			while ((line = reader.readLine()) != null) {
				name = extractHighScore.nextToken();
				score = Integer.parseInt(extractHighScore.nextToken());
				player = new Player(name, score);
			}
		} catch (Exception e) {

		}
	}

	public List<Player> getListTopPlayer() {
		return listTopPlayer;
	}

	public void setListTopPlayer(List<Player> listTopPlayer) {
		this.listTopPlayer = listTopPlayer;
	}

}
