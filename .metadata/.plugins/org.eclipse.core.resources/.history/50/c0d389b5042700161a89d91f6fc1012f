package hust.namtran.FlowControls;

public class PrintPattern {

	public static void main(String[] args) {
		int sizeTri = 8;
		int sizeRound = 7;
		/*
		 * print a square triangle
		 */
		for (int row = 1; row <= sizeTri; row++) {
			for (int col = 1; col <= row; col++) {
				System.out.print("#");
				if (col != row)
					System.out.print(" ");
			}
			System.out.println();
		}
		/*
		 * print a round
		 */
		for (int row = 1; row <= sizeRound; row++) {
			for (int col = 1; col <= sizeRound; col++) {
				if (col == 1 || col == sizeRound) {
					System.out.print("#");
				} else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}

}
