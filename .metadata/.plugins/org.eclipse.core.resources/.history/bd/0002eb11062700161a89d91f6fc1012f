package hust.namtran.FlowControls;

public class PrintPattern {

	public static void main(String[] args) {
		int triSize = 8;
		int roundSize = 7;
		/*
		 * print a square triangle
		 */
		for (int row = 1; row <= triSize; row++) {
			for (int col = 1; col <= row; col++) {
				System.out.print("#");
				if (col != row)
					System.out.print(" ");
			}
			System.out.println();
		}
		System.out.println();
		/*
		 * print a round
		 */
		for (int row = 1; row <= roundSize; row++) {
			if (row == 1 || row == roundSize) {
				for (int col = 1; col <= roundSize; col++) {
					System.out.print("#");
					if (col != roundSize) {
						System.out.print(" ");
					}
				}
			} else
				for (int col = 1; col <= roundSize; col++) {
					if (col == 1 || col == roundSize) {
						System.out.print("#");
						if (col != roundSize) {
							System.out.print(" ");
						}
					} else {
						System.out.print("  ");
					}
				}
			System.out.println();
		}
		System.out.println();
		/*
		 * print a Z
		 */
		for(int row = 1; row <= )
	}

}
