package hust.namtran.StringandChar;

import java.util.Scanner;

public class Bin2Dec {
	/*
	 * convert an input binary string into its equivalent decimal number
	 */
	public static void main(String[] args) {
		String binary;
		int decimal = 0;
		int order;
		char c;

		System.out.print("Enter a Binary string: ");
		Scanner in = new Scanner(System.in);
		binary = in.next();

		for (int i = 0; i < binary.length(); i++) {
			order = binary.length() - 1 - i;
			c = binary.charAt(i);
			if (c == '1') {
				decimal += (int) Math.pow(2, order); // 2^oder
			} else if (c != '0') {
				System.out.println("error: invalid binary string \"" + binary + "\"");
				System.exit(1);
			} else {
				// do nothing
			}
		}
		//display
		System.out.println("The equivalent decimal number for binary \"" + binary + "\" is: " + decimal);
		in.close();
	}

}
